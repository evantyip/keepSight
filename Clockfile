scheduler = Rufus::Scheduler.new

# 0th minute 9-6am from monday through friday 
scheduler.cron '0 9-17 * * 1-5' do
  puts 'Running 0th minute eye reminder'
  rake('twilio_sms:sms_eye_reminder')
end

# 20th minute 9-6am from monday through friday 
scheduler.cron '19 9-17 * * 1-5' do
  puts 'Running 20th minute eye reminder'
  rake('twilio_sms:sms_eye_reminder')
end

# 40th minute 9-6am from monday through friday 
scheduler.cron '39 9-17 * * 1-5' do
  puts 'Running 40th minute eye reminder'
  rake('twilio_sms:sms_eye_reminder')
end

scheduler.join
